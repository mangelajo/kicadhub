<%= simple_form_for @assembly_step, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :assembly_guide_id %>
  <%= f.input :reference_id %>
  <%= f.input :index %>
  <%= f.input :preview_file_name %>
  <%= f.input :preview_content_type %>
  <%= f.input :preview_file_size %>
  <%= f.input :preview_updated_at %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                assembly_steps_path, :class => 'btn' %>
  </div>
<% end %>
