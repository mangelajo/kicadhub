<%- model_class = AssemblyStep -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @assembly_step.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:assembly_guide_id) %>:</strong></dt>
  <dd><%= @assembly_step.assembly_guide_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reference_id) %>:</strong></dt>
  <dd><%= @assembly_step.reference_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:index) %>:</strong></dt>
  <dd><%= @assembly_step.index %></dd>
  <dt><strong><%= model_class.human_attribute_name(:preview_file_name) %>:</strong></dt>
  <dd><%= @assembly_step.preview_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:preview_content_type) %>:</strong></dt>
  <dd><%= @assembly_step.preview_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:preview_file_size) %>:</strong></dt>
  <dd><%= @assembly_step.preview_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:preview_updated_at) %>:</strong></dt>
  <dd><%= @assembly_step.preview_updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              assembly_steps_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_assembly_step_path(@assembly_step), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              assembly_step_path(@assembly_step),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
