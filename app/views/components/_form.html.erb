<%= simple_form_for @component, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :manufacturer %>
  <%= f.input :footprint %>
  <%= f.input :description %>
  <%= f.input :datasheet_url %>
  <%= f.input :manufacturer_cmp_url %>
  <%= f.input :mpn %>
  <%= f.input :octopart_uid %>
  <%= f.input :octopart_url %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                components_path, :class => 'btn' %>
  </div>
<% end %>
